  .view-report .main-btn {
    width: 35%;
    margin-bottom: 20px;
  }

  .view-report p {
    font-size: 12px;
  }

  .mandatory,
  .mandatory * {
    color: red;
  }

  .accepted,
  .accepted * {
    color: green;
  }

  .content-wrapper .nav-pills {
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: center;
  }

  .nav-pills .nav-link.active,
  .nav-pills .show>.nav-link {
    background-color: #212529;
  }

  .quotation-card {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    padding: 30px;
    margin-top: 13px;
    border-radius: 8px;
    border: 1px solid #eeeeee;
    column-gap: 30px;
    flex-direction: column;
  }

  .align-self-center {
    width: 30%;
  }

  .update-quotation-status button:disabled {
    background-color: #EBEBE4 !important;
    border: 1px solid #EBEBE4;
    color: #C6C6C6 !important;
  }

  form .update-quotation-status button.main-btn:disabled:hover {
    background-color: #EBEBE4 !important;
    border: 1px solid #EBEBE4;
    color: #C6C6C6 !important;
  }

  .quotation-status-alert {
    padding: 30px;
    border: 1px solid #c3e6cb;
    color: #0d1b25;
    background-color: #f8f8f8;
    margin-bottom: 30px;
    text-align: center;
  }

  .quotation-status-alert p {
    margin-bottom: 0;
  }

  @media only screen and (max-width: 600px) {
    .invoice-box table {
      display: block;
      overflow-x: auto;
      white-space: nowrap;
      width: 100%;
    }

    .invoice-box table tbody {
